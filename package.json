{
  "name": "emmanuelgautier.fr",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "test": "yarn build",
    "build": "run-s build:contentlayer build:next",
    "build:contentlayer": "./node_modules/.bin/contentlayer build",
    "build:css": "CSS_ENV=build postcss styles/globals.css --config postcss.config.js -o styles/output.css",
    "build:next": "next build",
    "build:rss": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs",
    "build:sitemap": "next-sitemap",
    "export": "next export",
    "start": "next start",
    "serve": "serve out",
    "i18n:extract": "formatjs extract 'pages/**/*.ts*' 'components/**/*.ts*' --out-file lang/en.json",
    "i18n:compile": "formatjs compile-folder lang compiled-lang",
    "prebuild": "yarn i18n:compile",
    "postbuild": "run-s build:rss build:sitemap",
    "check:format": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "next lint",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn check:format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@fontsource/roboto": "4.5.8",
    "@formatjs/cli": "6.0.4",
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/free-brands-svg-icons": "6.4.0",
    "@fortawesome/free-regular-svg-icons": "6.4.0",
    "@fortawesome/free-solid-svg-icons": "6.4.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@tailwindcss/typography": "0.5.9",
    "autoprefixer": "10.4.14",
    "classnames": "2.3.2",
    "clsx": "1.2.1",
    "contentlayer": "0.3.1",
    "date-fns": "2.29.3",
    "image-size": "1.0.2",
    "lodash": "4.17.21",
    "next": "12.3.4",
    "next-compose-plugins": "2.2.1",
    "next-contentlayer": "0.3.1",
    "next-plausible": "3.7.2",
    "next-seo": "6.0.0",
    "next-sitemap": "4.0.7",
    "next-themes": "0.2.1",
    "postcss": "8.4.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-intl": "6.3.2",
    "react-schemaorg": "2.0.0",
    "react-share": "4.4.1",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-code-titles": "1.2.0",
    "rehype-prism-plus": "1.5.1",
    "rehype-slug": "5.1.0",
    "remark-external-links": "9.0.1",
    "remark-gfm": "3.0.1",
    "rss": "1.2.2",
    "schema-dts": "1.1.2",
    "tailwindcss": "3.3.1",
    "unist-util-visit": "4.1.2"
  },
  "devDependencies": {
    "@emmanuelgautier/renovate-config": "1.5.3",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@types/lodash": "4.14.192",
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "@types/rss": "0.0.30",
    "babel-plugin-formatjs": "10.4.0",
    "babel-plugin-macros": "3.1.0",
    "cross-env": "7.0.3",
    "cssnano": "6.0.0",
    "eslint": "8.38.0",
    "eslint-config-next": "12.3.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-formatjs": "4.9.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.1",
    "npm-run-all": "4.1.5",
    "postcss-cli": "10.1.0",
    "postcss-preset-env": "8.3.0",
    "prettier": "2.8.7",
    "serve": "14.2.0",
    "typescript": "5.0.4"
  }
