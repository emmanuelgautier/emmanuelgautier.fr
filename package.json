{
  "name": "emmanuelgautier.fr",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "test": "yarn run build",
    "build": "run-s build:contentlayer build:next",
    "build:contentlayer": "./node_modules/.bin/contentlayer build",
    "build:css": "CSS_ENV=build postcss styles/globals.css --config postcss.config.js -o styles/output.css",
    "build:next": "next build",
    "build:rss": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs",
    "build:sitemap": "next-sitemap",
    "export": "next export",
    "start": "next start",
    "serve": "serve out",
    "i18n:extract": "formatjs extract 'pages/**/*.ts*' 'components/**/*.ts*' --out-file lang/en.json",
    "i18n:compile": "formatjs compile-folder lang compiled-lang",
    "prebuild": "npm run i18n:compile",
    "postbuild": "run-s build:rss build:sitemap",
    "check:format": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "next lint",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn check:format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@formatjs/cli": "4.5.0",
    "@tailwindcss/typography": "0.5.0",
    "autoprefixer": "10.4.0",
    "clsx": "1.1.1",
    "contentlayer": "0.0.33",
    "date-fns": "2.27.0",
    "image-size": "1.0.0",
    "lodash": "4.17.21",
    "mdx-bundler": "6.0.3",
    "next": "12.0.7",
    "next-compose-plugins": "2.2.1",
    "next-contentlayer": "0.0.33",
    "next-seo": "4.28.1",
    "next-sitemap": "1.6.203",
    "next-themes": "0.0.15",
    "postcss": "8.4.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-intl": "5.23.0",
    "react-schemaorg": "2.0.0",
    "react-share": "4.4.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "6.1.0",
    "rehype-code-titles": "1.0.3",
    "rehype-prism-plus": "1.1.3",
    "rehype-slug": "5.0.0",
    "remark-external-links": "9.0.1",
    "remark-gfm": "3.0.1",
    "rss": "1.2.2",
    "schema-dts": "1.0.0",
    "tailwindcss": "2.2.19",
    "unist-util-visit": "4.1.0"
  },
  "devDependencies": {
    "@emmanuelgautier/renovate-config": "1.2.2",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "@types/lodash": "4.14.178",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/rss": "0.0.29",
    "babel-plugin-formatjs": "10.3.12",
    "cross-env": "7.0.3",
    "cssnano": "5.0.12",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-formatjs": "2.19.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "npm-run-all": "4.1.5",
    "postcss-cli": "9.1.0",
    "postcss-preset-env": "7.0.1",
    "prettier": "2.5.1",
    "serve": "13.0.2",
    "typescript": "4.5.3"
  }
}
