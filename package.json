{
  "name": "emmanuelgautier.fr",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "test": "yarn run build",
    "build": "run-s extract:i18n compile:i18n build:rss build:next",
    "build:css": "CSS_ENV=build postcss styles/globals.css --config postcss.config.js -o styles/output.css",
    "build:next": "next build",
    "build:rss": "node ./scripts/generate-rss.js",
    "export": "next export",
    "start": "next start",
    "serve": "serve out",
    "extract:i18n": "formatjs extract '{pages,components}/**/*.{js,ts,tsx}' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file lang/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format simple lang compiled-lang",
    "postbuild": "next-sitemap",
    "check:format": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn check:format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@formatjs/cli": "2.15.0",
    "@formatjs/intl-datetimeformat": "2.8.4",
    "@formatjs/intl-getcanonicallocales": "1.7.3",
    "@formatjs/intl-numberformat": "5.7.6",
    "@formatjs/intl-pluralrules": "3.5.6",
    "@formatjs/intl-relativetimeformat": "7.3.6",
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.15",
    "@mapbox/rehype-prism": "0.8.0",
    "@netlify/plugin-lighthouse": "2.1.2",
    "@tailwindcss/typography": "0.4.1",
    "autoprefixer": "10.3.7",
    "babel-plugin-react-intl": "8.2.25",
    "classnames": "2.3.1",
    "clsx": "1.1.1",
    "date-fns": "2.25.0",
    "gray-matter": "4.0.3",
    "lodash": "4.17.21",
    "netlify-purge-cloudflare-on-deploy": "1.2.0",
    "next": "11.1.2",
    "next-seo": "4.28.1",
    "next-sitemap": "1.6.184",
    "next-themes": "0.0.15",
    "postcss": "8.3.9",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-intl": "5.20.12",
    "react-schemaorg": "2.0.0",
    "react-share": "4.4.0",
    "remark": "14.0.1",
    "remark-external-links": "9.0.1",
    "remark-html": "13.0.2",
    "remark-parse": "9.0.0",
    "remark-prism": "1.3.6",
    "remark-rehype": "9.1.0",
    "remark-stringify": "9.0.1",
    "rss": "1.2.2",
    "schema-dts": "1.0.0",
    "tailwindcss": "2.2.16",
    "unified": "9.2.2"
  },
  "devDependencies": {
    "@emmanuelgautier/renovate-config": "1.2.2",
    "@fullhuman/postcss-purgecss": "4.0.3",
    "@netlify/plugin-nextjs": "3.9.2",
    "@types/classnames": "2.3.1",
    "@types/node": "14.17.22",
    "@types/react": "17.0.29",
    "@types/react-dom": "17.0.9",
    "@types/rss": "0.0.29",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "cross-env": "7.0.3",
    "cssnano": "5.0.8",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.26.1",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "npm-run-all": "4.1.5",
    "postcss-cli": "8.3.1",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.4.1",
    "serve": "12.0.1",
    "typescript": "4.4.4"
  }
}
